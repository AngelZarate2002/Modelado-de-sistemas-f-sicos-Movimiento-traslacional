[t, y] = ode45(@traslacionalOde, [0 10], [0 0 0 0]);

figure;
subplot(2,1,1);
plot(t, y(:,1), 'r', t, y(:,3), 'b');
title('Posiciones');
xlabel('Tiempo (s)');
ylabel('Posici√≥n (m)');
legend('x1(t)', 'x2(t)');

subplot(2,1,2);
plot(t, y(:,2), 'r', t, y(:,4), 'b');
title('Velocidades');
xlabel('Tiempo (s)');
ylabel('Velocidad (m/s)');
legend('dx1/dt', 'dx2/dt');
